{
  "name": "@nextdriveioe/github-action-trigger-mcp",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for GitHub Actions integration",
  "private": false,
  "type": "module",
  "bin": {
    "@nextdriveioe/github-action-trigger-mcp": "./build/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "github-actions",
    "github-api",
    "workflow",
    "ci-cd",
    "github"
  ],
  "homepage": "https://github.com/nextdriveioe/github-action-trigger-mcp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nextdriveioe/github-action-trigger-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/nextdriveioe/github-action-trigger-mcp/issues"
  },
  "author": "NextDrive IoE Team",
  "license": "MIT",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "octokit": "^3.1.2",
    "axios": "^1.6.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}
